<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:id="@+id/main_header_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/schedule_plan_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:paddingBottom="25dp"
            android:paddingTop="10dp"
            android:text="Plan Name"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30dp"
            android:maxLines="1"/>
        <!--<Spinner
            android:id="@+id/scheduleSpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textAlignment="center"
            android:spinnerMode="dropdown"
            android:dropDownVerticalOffset="60dp"
            android:paddingBottom="25dp"
            android:paddingTop="10dp"/>-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 Weeks Left"
            android:textSize="30dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/button_border"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <HorizontalScrollView
            android:id="@+id/schedule_scroll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/schedule_plan_name"
            android:layout_marginTop="0dp"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/schedule_btn_parent">
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:stateListAnimator="@null"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@android:color/white"
                    android:text="Monday"/>
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:stateListAnimator="@null"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@android:color/white"
                    android:text="Tuesday"/>
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:stateListAnimator="@null"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@android:color/white"
                    android:text="Wednesday"/>
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:stateListAnimator="@null"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@android:color/white"
                    android:text="Thursday"/>
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:stateListAnimator="@null"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@android:color/white"
                    android:text="Friday"/>
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:stateListAnimator="@null"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@android:color/white"
                    android:text="Saturday"/>
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:stateListAnimator="@null"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@android:color/white"
                    android:text="Sunday"/>
            </LinearLayout>
        </HorizontalScrollView>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_body_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/schedule_timer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/schedule_timer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click To Start Workout"
                android:textSize="30dp"
                android:paddingLeft="10dp"
                android:lines="1"
                android:textAlignment="center"
                android:layout_weight="1"/>
            <Chronometer
                android:id="@+id/schedule_chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_weight="5"/>
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/schedule_timer"
            android:background="@android:color/transparent"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:scrollbars="none"
            android:id="@+id/horizontalScrollView">
            <LinearLayout
                android:id="@+id/schedule_check_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/main_footer_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="-40dp">
        <Button
            android:id="@+id/main_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:background="@android:color/transparent"
            android:text="reset"
            android:gravity="center"
            android:textSize="18dp"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/main_shuffle_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="shuffle"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</LinearLayout>