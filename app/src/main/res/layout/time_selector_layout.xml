<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/button_border"
        android:layout_margin="5dp">
        <TextView
            android:id="@+id/time_selector_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="blank Timer"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_weight="1"/>
        <TimePicker
            android:id="@+id/time_selector_time_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="4"
            style="@style/TimePickerThemex">
        </TimePicker>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/time_selector_cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:textColor="@color/white"
                android:text="Cancel"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_marginRight="1dp"/>
            <Button
                android:id="@+id/time_selector_confirm_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:textColor="@color/white"
                android:text="Confirm"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_marginLeft="1dp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>